<body>
<div class="container-fluid">
  <div class ="main">
    <div class ="well well_show">  
      <div class = "row">
        <div class=col-md-2>
    
        <div class= "logo">
            <% if @user.profile.avatar.attached? %>
         <%= image_tag @user.profile.avatar, class: "avatar_show_img" %>
         <% else %>
         <img class ="logo" src="https://mbgdb.s3.us-east-2.amazonaws.com/LogoMakr_95QFB2.png" alt="MYBGDB Logo">
         <% end %>
        </div>
        </div>
          <div class=col-md-8>
          
               <h1 class = "text-center"> <%= @user.profile.first_name %> <%= @user.profile.last_name %> </h1><br>
                <p class = "profile.text text-center"><b>Location:</b>  <%= @user.profile.city %>, <%= @user.profile.state %>  <%= @user.profile.zip %></p><br>
                 <p class = "profile.text text-center"><b>Email:</b> <%= @user.profile.contact_email %></p>
          </div>
        </div>
    </div>
     
          <div class="profile_show_text">
            <div class="well">
               <b>All About Me: </b> <%= @user.profile.description %>
            </div>
          </div>
     <% if @user == current_user %>   
     
                   <%= form_for Post.new do |f| %>
                    <div class ="well">        
                          <div class="form-group post_content">
                              <%= f.label :content, "Say Something" %>
                            <%= f.text_field :content, class: 'post_content' %>
                          </div>
                          <div class ="row">
                            <div class ="col-md-6"
                              <div class="form-group">
                                  <%= f.label :image, "Show Something" %>
                                <%= f.file_field :image %>
                            </div>
                            <div class = "col-md-3">
                              </div>
                              <div class="form-group post_user">
                                <%= f.text_field :user_id, value: current_user.id, class:'d-none'%>
                              </div>
                              <br>
                              <div class="text-center">
                                <%= f.submit 'Post Something', class: 'btn btn-primary' %>
                                <%end%>
                              </div>
                              </div>
                          </div>
                          <%end%>
                          
                 <div class="row-fluid">
                    <div class="col-md-6">  
                              <div class="posts">
                                <% @posts.each do |post| %>
                                  <%= render partial: 'post', locals: { post: post } %>
                                    
                                    <% end %>
                                    
                                <%= will_paginate @posts %>
                              </div>
                            </div>
                            
                   <div class="row-fluid">
                    <div class="col-md-6">     
                      <div class="well">
                            <h2>Friends</h2>
                            
                                <% for friendship in @user.friendships %>
                                  <div class="post">
                                    <div class="row">
                                    <div class="col-sm-2">
                                        <% if @user.profile.avatar.attached? %>
                                       <%= image_tag friendship.friend.profile.avatar, class: "avatar_friendlist" %>
                                       <% else %>
                                       <img class ="logo" src="https://mbgdb.s3.us-east-2.amazonaws.com/LogoMakr_95QFB2.png" alt="MYBGDB Logo">
                                       <% end %>
                                   </div>
                                   <div class="col-sm-2">
                                      <%=h friendship.friend.username %>
                                  </div>
                                  <div class="col-sm-4">
                                  <%= link_to "View Profile", user_path(friendship.friend.profile.user_id),:method => :get, :class => 'btn btn-primary btn-xs' %> 
                                   </div>
                                  <div class="col-sm-2"> 
                                    (<%= link_to "remove", friendship, :method => :delete %>)
                                 </div>
                              </div>
                            <% end %>
                        </div>
                       

                            <p><%= link_to "Find Friends", users_path, class: "text-center" %></p>
                            
                            <h2>Friended by Users</h2>
                            
                              <% for user in @user.inverse_friends %>
                              <div class="post">
                               <% if @user.profile.avatar.attached? %>
                               <%= image_tag friendship.friend.profile.avatar, class: "avatar_friendlist" %>
                               <% else %>
                               <img class ="logo" src="https://mbgdb.s3.us-east-2.amazonaws.com/LogoMakr_95QFB2.png" alt="MYBGDB Logo">
                               <% end %>
                             <%=h user.username %></li>
                             <%= link_to "View Profile", user_path(user.profile.user_id),:method => :get, :class => 'btn btn-primary btn-xs' %> 
                              <% end %>
                            </div>
                              </div>
                          </div>                   
                  </div>
                  </div>
                  </div>
                  
          
  </div>
</div>                         
</body>                                
     